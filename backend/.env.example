# Environment
NODE_ENV=development

# Server
PORT=4000
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL dengan Supabase)
DATABASE_URL="postgresql://user:password@localhost:5432/publishify?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/publishify?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@publishify.com

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png
UPLOAD_DEST=./uploads

# Supabase Storage
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_STORAGE_BUCKET=publishify-files

# Payment Gateway (contoh: Midtrans)
PAYMENT_SERVER_KEY=your-payment-server-key
PAYMENT_CLIENT_KEY=your-payment-client-key
PAYMENT_MERCHANT_ID=your-merchant-id

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
